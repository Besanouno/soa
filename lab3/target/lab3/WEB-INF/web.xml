<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>Game</servlet-name>
        <jsp-file>/WEB-INF/game.jsp</jsp-file>
    </servlet>

    <servlet-mapping>
        <servlet-name>Game</servlet-name>
        <url-pattern>/game.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Movies</servlet-name>
        <jsp-file>/WEB-INF/movies.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Movies</servlet-name>
        <url-pattern>/movies.do</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Shop</servlet-name>
        <jsp-file>/WEB-INF/shop/catalog.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Shop</servlet-name>
        <url-pattern>/shop/catalog.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Basket</servlet-name>
        <jsp-file>/WEB-INF/shop/basket.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Basket</servlet-name>
        <url-pattern>/shop/basket.do</url-pattern>
    </servlet-mapping>
</web-app>